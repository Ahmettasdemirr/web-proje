@page
@model LoginModel

@{
    ViewData["Title"] = "Giriş Yap";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-5 d-flex justify-content-center align-items-center" style="min-height: 80vh;">
    <div class="col-md-5">

        <div class="card shadow-lg border-0 bg-dark text-white">
            <div class="card-header bg-primary text-white text-center">
                <h2 class="mb-0"><i class="fas fa-lock me-2"></i> Sisteme Giriş</h2>
            </div>

            <div class="card-body p-4">
                <p class="text-center text-secondary mb-4">
                    Lütfen hesap bilgilerinizle giriş yapınız.
                </p>

                <section>
                    <form id="account" method="post">

                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <div class="mb-3">
                            <label asp-for="Input.Email" class="form-label fw-bold">E-posta</label>
                            <input asp-for="Input.Email" class="form-control bg-secondary text-white border-0" autocomplete="username" aria-required="true" placeholder="e-posta adresiniz" />
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Input.Password" class="form-label fw-bold">Şifre</label>
                            <input asp-for="Input.Password" class="form-control bg-secondary text-white border-0" autocomplete="current-password" aria-required="true" type="password" placeholder="Şifreniz" />
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>

                        <div class="checkbox mb-3">
                            <label asp-for="Input.RememberMe" class="form-label text-white">
                                <input class="form-check-input" asp-for="Input.RememberMe" />
                                Beni Hatırla
                            </label>
                        </div>

                        <div>
                            <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary shadow">
                                <i class="fas fa-sign-in-alt me-1"></i> Giriş Yap
                            </button>
                        </div>

                        <div class="mt-4 text-center">
                            <p>
                                <a id="forgot-password" asp-page="./ForgotPassword" class="text-info">Şifremi unuttum?</a>
                            </p>
                            <p class="mt-2">
                                <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="text-success fw-bold">Yeni Kayıt Oluştur</a>
                            </p>
                            <p class="mt-2">
                                <a id="resend-confirmation" asp-page="./ResendEmailConfirmation" class="text-warning">E-posta Onayını Tekrar Gönder</a>
                            </p>
                        </div>
                    </form>
                </section>
            </div>
        </div>

    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}