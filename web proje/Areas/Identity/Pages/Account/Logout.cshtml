@page
@model LogoutModel
@{
    ViewData["Title"] = "Çıkış Yapıldı";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-5 d-flex justify-content-center align-items-center" style="min-height: 80vh;">
    <div class="col-md-5">
        <div class="card shadow-lg border-0 bg-dark text-white text-center">
            <div class="card-header bg-success text-white">
                <h2 class="mb-0"><i class="fas fa-sign-out-alt me-2"></i> @ViewData["Title"]</h2>
            </div>
            <div class="card-body p-4">
                @{
                    if (User.Identity?.IsAuthenticated ?? false)
                    {
                        <p class="lead">Çıkış işlemini tamamlamak için butona tıklayın.</p>
                        <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
                            <button type="submit" class="btn btn-danger btn-lg shadow mt-3">
                                <i class="fas fa-sign-out-alt me-1"></i> Çıkış Yap
                            </button>
                        </form>
                    }
                    else
                    {
                        <i class="fas fa-check-circle fa-4x text-success mb-3"></i>
                        <p class="lead">Uygulamadan başarıyla çıkış yaptınız.</p>
                        <a asp-controller="Home" asp-action="Index" class="btn btn-primary mt-3">
                            Anasayfaya Git
                        </a>
                    }
                }
            </div>
        </div>
    </div>
</div>