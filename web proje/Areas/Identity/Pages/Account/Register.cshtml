@page
@model RegisterModel

@{
    ViewData["Title"] = "Üye Ol";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-5 d-flex justify-content-center align-items-center" style="min-height: 80vh;">
    <div class="col-md-5">

        <div class="card shadow-lg border-0 bg-dark text-white">
            <div class="card-header bg-success text-white text-center">
                <h2 class="mb-0"><i class="fas fa-user-plus me-2"></i> Yeni Üyelik Oluştur</h2>
            </div>

            <div class="card-body p-4">
                <p class="text-center text-secondary mb-4">
                    Fitness merkezimizden hizmet almak için üye olunuz.
                </p>

                <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">

                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                    <div class="mb-3">
                        <label asp-for="Input.Email" class="form-label fw-bold">E-posta</label>
                        <input asp-for="Input.Email" class="form-control bg-secondary text-white border-0" autocomplete="username" aria-required="true" placeholder="e-posta adresiniz" />
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Input.Password" class="form-label fw-bold">Şifre</label>
                        <input asp-for="Input.Password" class="form-control bg-secondary text-white border-0" autocomplete="new-password" aria-required="true" type="password" placeholder="Şifrenizi belirleyiniz" />
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Input.ConfirmPassword" class="form-label fw-bold">Şifre (Tekrar)</label>
                        <input asp-for="Input.ConfirmPassword" class="form-control bg-secondary text-white border-0" autocomplete="new-password" aria-required="true" type="password" placeholder="Şifrenizi tekrar giriniz" />
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                    </div>

                    <div class="d-grid gap-2 mt-4">
                        <button id="registerSubmit" type="submit" class="w-100 btn btn-success btn-lg shadow">
                            <i class="fas fa-user-check me-1"></i> Kayıt Ol
                        </button>
                    </div>
                </form>
            </div>

            <div class="card-footer text-center">
                Zaten hesabınız var mı? <a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl" class="text-primary fw-bold">Giriş Yapın</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}