@using Microsoft.AspNetCore.Identity
@using FitnessCenterProject.Models
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        // Kullanıcı Giriş Yapmışsa
        var userName = UserManager.GetUserName(User);

        <li class="nav-item">
            <a id="manage" class="nav-link text-white btn btn-outline-info me-2" asp-area="Identity" asp-page="/Account/Manage/Index" title="Profil Yönetimi">
                <i class="fas fa-user-circle me-1"></i> Merhaba @userName!
            </a>
        </li>
        <li class="nav-item">
            <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button id="logout" type="submit" class="nav-link btn btn-danger text-white">
                    <i class="fas fa-sign-out-alt me-1"></i> Çıkış Yap
                </button>
            </form>
        </li>
    }
    else
    {
        // Kullanıcı Giriş Yapmamışsa
        <li class="nav-item">
            <a class="nav-link btn btn-success text-white me-2" id="register" asp-area="Identity" asp-page="/Account/Register">
                <i class="fas fa-user-plus me-1"></i> Üye Ol
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link btn btn-primary text-white" id="login" asp-area="Identity" asp-page="/Account/Login">
                <i class="fas fa-sign-in-alt me-1"></i> Giriş Yap
            </a>
        </li>
    }
</ul>