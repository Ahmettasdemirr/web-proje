@model FitnessCenterProject.Models.Trainer

@{
    ViewData["Title"] = "Eğitmen Düzenle";
    // Eğitmenin mevcut hizmetlerinin Id'lerini al
    var selectedIds = Model.TrainerServices.Select(ts => ts.ServiceId).ToHashSet();
}

<h1>Eğitmen Düzenle: @Model.Name</h1>
<hr />

<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="TrainerId" />

            <div class="form-group mb-3">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            @* 💡 YENİ ALAN: Hizmetlerin Seçimi (Mevcut Seçimleri Gösterir) *@
            <div class="form-group mb-4">
                <label class="control-label">Sunabileceği Hizmetler</label>
                <div class="border p-3" style="max-height: 250px; overflow-y: auto;">
                    @if (ViewBag.Services != null)
                    {
                        @foreach (var service in ViewBag.Services)
                        {
                            <div class="form-check">
                                @* Mevcut hizmet id'si, seçili Id'ler listesinde varsa 'checked' olarak işaretle *@
                                <input class="form-check-input" type="checkbox" name="selectedServiceIds" value="@service.ServiceId" id="service_@service.ServiceId"
                                       @(selectedIds.Contains(service.ServiceId) ? "checked" : "")>
                                <label class="form-check-label" for="service_@service.ServiceId">
                                    @service.Name (@service.Price.ToString("C"))
                                </label>
                            </div>
                        }
                    }
                    else
                    {
                        <p class="text-danger">Hizmetler yüklenemedi.</p>
                    }
                </div>
                <small class="text-muted">Eğitmenin sunacağı hizmetleri güncelleyin.</small>
            </div>

            <div class="form-group">
                <input type="submit" value="Kaydet" class="btn btn-success" />
                <a asp-action="Index" class="btn btn-secondary">Listeye Geri Dön</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}