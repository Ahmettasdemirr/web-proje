@model IEnumerable<FitnessCenterProject.Models.Trainer>

@{
    ViewData["Title"] = "Eğitmen Yönetimi";
    // Yönetim Paneli olduğu için _Layout.cshtml kullanılıyor
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-5">

    @* Ekleme: Başarı Mesajı Gösterimi (Controller'da TempData kullanıldığı için eklenmeli) *@
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle me-2"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="d-flex justify-content-between align-items-center mb-4 text-light">
        <h2 class="fw-bold"><i class="fas fa-user-tie me-2 text-primary"></i> Eğitmen Yönetimi</h2>
        <a asp-action="Create" class="btn btn-accent shadow-sm">
            <i class="fas fa-plus me-2"></i> Yeni Eğitmen Ekle
        </a>
    </div>

    <div class="table-responsive bg-dark p-3 rounded shadow-lg">
        <table class="table table-dark table-striped table-hover align-middle">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Name)</th>
                    <th>Sunulan Hizmetler</th>
                    <th class="text-end">İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            <span class="fw-bold text-light">@Html.DisplayFor(modelItem => item.Name)</span>
                        </td>

                        <td>
                            @if (item.TrainerServices != null && item.TrainerServices.Any())
                            {
                                @foreach (var ts in item.TrainerServices)
                                {
                                    <span class="badge bg-primary text-white me-1 mb-1">@ts.Service.Name</span>
                                }
                            }
                            else
                            {
                                <span class="badge bg-secondary text-muted">Hizmet tanımlanmamış.</span>
                            }
                        </td>

                        <td class="text-end">
                            <div class="btn-group" role="group">
                                <a asp-action="Edit" asp-route-id="@item.TrainerId" class="btn btn-sm btn-info-action">
                                    <i class="fas fa-edit"></i> Düzenle
                                </a>
                                <a asp-action="Details" asp-route-id="@item.TrainerId" class="btn btn-sm btn-secondary-action">
                                    <i class="fas fa-info-circle"></i> Detay
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.TrainerId" class="btn btn-sm btn-danger-action">
                                    <i class="fas fa-trash-alt"></i> Sil
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-warning mt-4 text-center" role="alert">
            Sistemde kayıtlı eğitmen bulunmamaktadır.
        </div>
    }

</div>

@section Scripts {
    <style>
        .btn-info-action {
            background-color: var(--primary-color);
            border-color: var(--primary-color);
            color: white;
        }

            .btn-info-action:hover {
                background-color: #0056b3;
                border-color: #0056b3;
            }

        .btn-secondary-action {
            background-color: var(--soft-bg);
            border-color: var(--soft-bg);
            color: var(--light-text);
        }

            .btn-secondary-action:hover {
                background-color: #495057;
                border-color: #495057;
            }

        .btn-danger-action {
            background-color: #dc3545;
            border-color: #dc3545;
            color: white;
        }

            .btn-danger-action:hover {
                background-color: #c82333;
                border-color: #c82333;
            }

        /* Badge stilini daha düzgün yapmak için */
        .badge {
            font-size: 0.8em;
            font-weight: 500;
        }
    </style>
}