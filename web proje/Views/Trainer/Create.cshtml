@model FitnessCenterProject.Models.Trainer

@{
    ViewData["Title"] = "Yeni Antrenör Oluştur";
}

<h1>Yeni Antrenör</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Oluştur" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<hr />
<div>
    <a asp-action="Index">Antrenör Listesine Geri Dön</a>
</div>

@section Scripts {
    @{
        // İstemci tarafı (Client-side) doğrulama scriptlerini yükler
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}