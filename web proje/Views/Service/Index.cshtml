@model IEnumerable<FitnessCenterProject.Models.Service>

@{
    ViewData["Title"] = "Hizmet Listesi";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-5">
    <h1 class="mb-4 text-white"><i class="fas fa-dumbbell me-2"></i> Hizmet Yönetimi</h1>

    <p class="mb-4">
        <a asp-action="Create" class="btn btn-success shadow-sm">
            <i class="fas fa-plus me-1"></i> Yeni Hizmet Ekle
        </a>
    </p>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="table-responsive">
        <table class="table table-dark table-striped table-hover table-bordered shadow-lg">
            <thead class="table-light text-dark">
                <tr>
                    <th>
                        İsim
                        @* @Html.DisplayNameFor(model => model.Name) yerine direkt "İsim" yazıldı *@
                    </th>
                    <th>
                        Ücret
                        @* @Html.DisplayNameFor(model => model.Price) yerine direkt "Ücret" yazıldı *@
                    </th>
                    <th>
                        Süre (Dk)
                        @* @Html.DisplayNameFor(model => model.DurationMinutes) yerine "Süre (Dk)" yazıldı *@
                    </th>
                    <th>İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @* Fiyat formatı korunarak gösteriliyor *@
                            @item.Price.ToString("C2", new System.Globalization.CultureInfo("tr-TR"))
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DurationMinutes)
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.ServiceId" class="btn btn-sm btn-warning me-1" title="Düzenle">
                                <i class="fas fa-edit"></i> Düzenle
                            </a>
                            <a asp-action="Details" asp-route-id="@item.ServiceId" class="btn btn-sm btn-info me-1" title="Detaylar">
                                <i class="fas fa-info-circle"></i> Detay
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.ServiceId" class="btn btn-sm btn-danger" title="Sil">
                                <i class="fas fa-trash-alt"></i> Sil
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>