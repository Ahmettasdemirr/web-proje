@model FitnessCenterProject.Models.Service

@{
    ViewData["Title"] = "Yeni Hizmet Oluştur";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-7">

            <div class="card shadow-lg border-0 bg-dark text-white">
                <div class="card-header bg-success text-white">
                    <h2 class="mb-0"><i class="fas fa-plus-circle me-2"></i> Yeni Hizmet Ekle</h2>
                </div>
                <div class="card-body">
                    <form asp-action="Create">

                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <div class="mb-3">
                            <label asp-for="Name" class="form-label fw-bold">Hizmet Adı</label>
                            <input asp-for="Name" class="form-control bg-secondary text-white border-0" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Description" class="form-label fw-bold">Açıklama (Opsiyonel)</label>
                            <textarea asp-for="Description" class="form-control bg-secondary text-white border-0" rows="3"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label asp-for="Price" class="form-label fw-bold">Ücret (TL)</label>
                                <input asp-for="Price" class="form-control bg-secondary text-white border-0" type="number" step="0.01" />
                                <span asp-validation-for="Price" class="text-danger"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="DurationMinutes" class="form-label fw-bold">Süre (Dakika)</label>
                                <input asp-for="DurationMinutes" class="form-control bg-secondary text-white border-0" type="number" min="1" />
                                <span asp-validation-for="DurationMinutes" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="d-grid gap-2 mt-4">
                            <button type="submit" class="btn btn-success btn-lg shadow">
                                <i class="fas fa-save me-1"></i> Hizmeti Kaydet
                            </button>
                        </div>
                    </form>
                </div>

                <div class="card-footer text-center">
                    <a asp-action="Index" class="btn btn-outline-light mt-2">
                        <i class="fas fa-arrow-left me-1"></i> Hizmet Listesine Geri Dön
                    </a>
                </div>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}