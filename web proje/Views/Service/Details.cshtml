@model FitnessCenterProject.Models.Service

@{
    ViewData["Title"] = "Hizmet Detayları: " + Model.Name;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-7">

            <div class="card shadow-lg border-0 bg-dark text-white">
                <div class="card-header bg-info text-white">
                    <h2 class="mb-0"><i class="fas fa-info-circle me-2"></i> @ViewData["Title"]</h2>
                </div>

                <div class="card-body">
                    <dl class="row mb-0">
                        <dt class="col-sm-4 text-start fw-bold">İsim:</dt>
                        <dd class="col-sm-8 text-end">
                            @Html.DisplayFor(model => model.Name)
                        </dd>

                        <dt class="col-sm-4 text-start fw-bold">Açıklama:</dt>
                        <dd class="col-sm-8 text-end">
                            @(string.IsNullOrEmpty(Model.Description) ? "Açıklama mevcut değil" : Model.Description)
                        </dd>

                        <dt class="col-sm-4 text-start fw-bold">Ücret:</dt>
                        <dd class="col-sm-8 text-end">
                            @Model.Price.ToString("C2", new System.Globalization.CultureInfo("tr-TR"))
                        </dd>

                        <dt class="col-sm-4 text-start fw-bold">Süre:</dt>
                        <dd class="col-sm-8 text-end">
                            @Html.DisplayFor(model => model.DurationMinutes) dakika
                        </dd>
                    </dl>
                </div>

                <div class="card-footer d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-outline-light"><i class="fas fa-list me-1"></i> Hizmet Listesi</a>

                    <a asp-action="Edit" asp-route-id="@Model?.ServiceId" class="btn btn-warning shadow text-dark">
                        <i class="fas fa-edit me-1"></i> Düzenle
                    </a>
                </div>
            </div>

        </div>
    </div>
</div>