@model FitnessCenterProject.Models.Appointment

@{
    ViewData["Title"] = "Randevu Detayları";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg">
                <div class="card-header bg-primary text-white">
                    <h2 class="mb-0"><i class="fas fa-info-circle me-2"></i> Randevu Detayları</h2>
                </div>
                <div class="card-body">
                    <h4 class="card-title mb-4">@Model.StartTime.ToString("dd MMMM yyyy HH:mm") Randevusu</h4>

                    <dl class="row mb-0">
                        <dt class="col-sm-4 text-start fw-bold">Eğitmen:</dt>
                        <dd class="col-sm-8 text-end">
                            @(Model.Trainer != null ? Model.Trainer.Name : "Bilinmiyor")
                        </dd>

                        <dt class="col-sm-4 text-start fw-bold">Hizmet:</dt>
                        <dd class="col-sm-8 text-end">
                            @(Model.Service != null ? Model.Service.Name : "Bilinmiyor")
                        </dd>

                        <dt class="col-sm-4 text-start fw-bold">Başlangıç Zamanı:</dt>
                        <dd class="col-sm-8 text-end">
                            @Model.StartTime.ToString("dd.MM.yyyy HH:mm")
                        </dd>

                        <dt class="col-sm-4 text-start fw-bold">Bitiş Zamanı:</dt>
                        <dd class="col-sm-8 text-end">
                            @Model.EndTime.ToString("dd.MM.yyyy HH:mm")
                        </dd>

                        <dt class="col-sm-4 text-start fw-bold">Notlar:</dt>
                        <dd class="col-sm-8 text-end">
                            @(string.IsNullOrEmpty(Model.Notes) ? "Yok" : Model.Notes)
                        </dd>

                        <dt class="col-sm-4 text-start fw-bold">Durum:</dt>
                        <dd class="col-sm-8 text-end">
                            @if (Model.IsConfirmed)
                            {
                                <span class="badge bg-success py-2 px-3">Onaylandı</span>
                            }
                            else
                            {
                                <span class="badge bg-warning text-dark py-2 px-3">Beklemede</span>
                            }
                        </dd>
                    </dl>
                </div>

                <div class="card-footer d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-secondary"><i class="fas fa-list me-1"></i> Randevu Listesi</a>

                    <a asp-action="Delete" asp-route-id="@Model.AppointmentId" class="btn btn-danger">
                        <i class="fas fa-trash-alt me-1"></i> Randevuyu İptal Et
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>