@model IEnumerable<FitnessCenterProject.Models.Appointment>

@{
    ViewData["Title"] = "Randevularım";
}

<h1>Randevularım</h1>

<p>
    <a asp-action="Create">Yeni Randevu Oluştur</a>
</p>

@if (Model.Any())
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Eğitmen</th>
                <th>Hizmet</th>
                <th>Başlangıç Zamanı</th>
                <th>Bitiş Zamanı</th>
                <th>Notlar</th>
                <th>Durum</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@(item.Trainer != null ? item.Trainer.Name : "Yok")</td> @* Trainer için Null Kontrolü *@
                    <td>@(item.Service != null ? item.Service.Name : "Yok")</td> @* Service için Null Kontrolü *@
                    <td>@Html.DisplayFor(modelItem => item.StartTime)</td>
                    <td>@Html.DisplayFor(modelItem => item.EndTime)</td>
                    <td>@Html.DisplayFor(modelItem => item.Notes)</td>
                    <td>@(item.IsConfirmed ? "Onaylandı" : "Beklemede")</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.AppointmentId">Düzenle</a> |
                        <a asp-action="Details" asp-route-id="@item.AppointmentId">Detaylar</a> |
                        <a asp-action="Delete" asp-route-id="@item.AppointmentId">Sil</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-info">
        Henüz kayıtlı bir randevunuz bulunmamaktadır.
    </div>
}